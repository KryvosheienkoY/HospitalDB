            <td name="buttons">
                <div class="btn-group pull-right">
                    <button id="bEdit4" type="button" class="btn btn-sm btn-default" onclick="rowEdit(this);"><i
                                class="fas fa-pencil-alt"> </i></button>
                    <button id="bAcep4" type="button" class="btn btn-sm btn-default" style="display:none;"
                            onclick="rowAcep(this);"><i class="fas fa-check-circle"> </i></button>
                    <button id="bCanc4" type="button" class="btn btn-sm btn-default" style="display:none;"
                            onclick="rowCancel(this);"><i class="fas fa-window-close"> </i></button>
                </div>
            </td>
        </tr>
        <tr>
            <td>Квартира</td>
