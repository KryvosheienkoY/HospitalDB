<head>
    <%- include('head'); %>
</head>
<body>
<script src="js/table_myprofile_doctor.js"></script>
<%- include('head'); %>
<%- include('toolbar_doctor_view', {section: 'main'}); %>
<div style="margin: 25px">
    <table class="table table-striped table-responsive-md btn-table" style="width: 60%; margin-left: 15%">
        <thead>
        <tr>
            <th colspan="3">Моя інформація</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td>Прізвище</td>
            <td id="td1"><%= doctor.Doctor_Surname %></td>
            <td name="buttons">
                <div class="btn-group pull-right">
                    <button id="bEdit1" type="button" class="btn btn-sm btn-default" onclick="rowEdit(this);"><i
                                class="fas fa-pencil-alt"> </i></button>
                    <button id="bAcep1" type="button" class="btn btn-sm btn-default" style="display:none;"
                            onclick="rowAcep(this);"><i class="fas fa-check-circle"> </i></button>
                    <button id="bCanc1" type="button" class="btn btn-sm btn-default" style="display:none;"
                            onclick="rowCancel(this);"><i class="fas fa-window-close"> </i></button>
                </div>
            </td>
        </tr>
        <tr>
            <td>Ім'я</td>
            <td><%= doctor.Doctor_Firstname %></td>
            <td></td>
        </tr>
        <tr>
            <td>По-батькові</td>
            <td><%= doctor.Doctor_Patronymic %></td>
            <td></td>
        </tr>
        <tr>
            <td>Зам відділу</td>
            <td><%= doctor.Department_Head %></td>
        </tr>
        <tr>
            <td>Номер телефону</td>
            <td id="td3"><%= doctor.Doctor_PhoneN %></td>
            <td name="buttons">
                <div class="btn-group pull-right">
                    <button id="bEdit3" type="button" class="btn btn-sm btn-default" onclick="rowEdit(this);"><i
                                class="fas fa-pencil-alt"> </i></button>
                    <button id="bAcep3" type="button" class="btn btn-sm btn-default" style="display:none;"
                            onclick="rowAcep(this);"><i class="fas fa-check-circle"> </i></button>
                    <button id="bCanc3" type="button" class="btn btn-sm btn-default" style="display:none;"
                            onclick="rowCancel(this);"><i class="fas fa-window-close"> </i></button>
                </div>
            </td>
        </tr>
        <tr>
            <td>Імейл</td>
            <td id="td4"><%= doctor.Doctor_eAddress %></td>
            <td name="buttons">
                <div class="btn-group pull-right">
                    <button id="bEdit4" type="button" class="btn btn-sm btn-default" onclick="rowEdit(this);"><i
                                class="fas fa-pencil-alt"> </i></button>
                    <button id="bAcep4" type="button" class="btn btn-sm btn-default" style="display:none;"
                            onclick="rowAcep(this);"><i class="fas fa-check-circle"> </i></button>
                    <button id="bCanc4" type="button" class="btn btn-sm btn-default" style="display:none;"
                            onclick="rowCancel(this);"><i class="fas fa-window-close"> </i></button>
                </div>
            </td>
        </tr>
        <tr>
            <td>Спеціалізація</td>
            <td><%= doctor.Doctor_Specialization %></td>
        </tr>
        <tr>
            <td>Ступінь</td>
            <td ><%= doctor.Scientific_Degree %></td>
        </tr>
        <tr>
            <td>Кількість прийомів</td>
            <td ><%= appointments%></td>
        </tr>
        
        </tbody>
    </table>

        <table id="tableSchedule" style="width: 60%; margin-left: 15%"
               class="table table-striped table-responsive-md btn-table"
               style="width: 70%; margin-left: 15%">
            <thead>
            <tr>
                <th>День тижня</th>
                <th>Початок роботи</th>
                <th>Кінець роботи</th>
                <th>Кабінет</th>
                <th>Інформація</th>
            </tr>
            </thead>
            <tbody>
            <% for (let i = 0; i < schedule.length; i++) { %>
                <tr>
                    <td><%= schedule[i].Weekday_Num %></td>
                    <td><%= schedule[i].Workday_StartTime %></td>
                    <td><%= schedule[i].Workday_EndTime %></td>
                    <td><%= schedule[i].Workday_Room %></td>
                    <td><%= schedule[i].Workday_Info %></td>
                </tr>
            <% } %>
            </tbody>
        </table>



</div>
<script>
    $('table').SetEditable("1");
</script>
</body>